<div class="flex flex-col justify-center 2xl:p-32 p-10">
    <h2 class="text-left w-96 mb-6 text-3xl font-semibold">Sign up</h2>
    <form action="" method="POST" class="flex flex-col gap-4">
        <div class="flex flex-row gap-4">
            <div class="flex flex-col gap-1">
                <label for="firstName" class="text-sm">First name</label>
                <input type="text" name="firstName" id="firstName" placeholder="Enter your first name" value="<%= firstName %>" required class="bg-transparent border-solid border-[1px] border-gray-700 p-3 text-start h-12 w-80 rounded-lg outline-none">
                <% if (errors) { %>
                    <% errors.forEach(function(error) { %>
                        <% if (error.path === 'firstName') { %>
                            <p class="text-red-600 text-sm"><%= error.msg %></p>
                        <% } %>
                    <% }) %>
                <% } %>
            </div>
            <div class="flex flex-col gap-1">
                <label for="lastName" class="text-sm">Last name</label>
                <input type="text" name="lastName" id="lastName" placeholder="Enter your last name" value="<%= lastName %>" required class="bg-transparent border-solid border-[1px] border-gray-700 p-3 text-start h-12 w-80 rounded-lg outline-none">
                <% if (errors) { %>
                    <% errors.forEach(function(error) { %>
                        <% if (error.path === 'lastName') { %>
                            <p class="text-red-600 text-sm"><%= error.msg %></p>
                        <% } %>
                    <% }) %>
                <% } %>
            </div>
        </div>
        <div class="flex flex-col gap-1">
            <label for="username" class="text-sm">Username</label>
            <input type="text" name="username" id="username" placeholder="Enter your username" value="<%= username %>" required class="bg-transparent border-solid border-[1px] border-gray-700 p-3 text-start h-12 w-full rounded-lg outline-none">
            <% if (errors) { %>
                <% errors.forEach(function(error) { %>
                    <% if (error.path === 'username') { %>
                        <p class="text-red-600 text-sm"><%= error.msg %></p>
                    <% } %>
                <% }) %>
            <% } %>
        </div>
        <div class="flex flex-col gap-1">
            <label for="password" class="text-sm">Password</label>
            <input type="password" name="password" id="password" placeholder="Enter a password" value="<%= password %>" required class="bg-transparent border-solid border-[1px] border-gray-700 p-3 text-start h-12 w-full rounded-lg outline-none">
            <% if (errors) { %>
                <% errors.forEach(function(error) { %>
                    <% if (error.path === 'password') { %>
                        <p class="text-red-600 text-sm"><%= error.msg %></p>
                    <% } %>
                <% }) %>
            <% } %>
        </div>
        <div class="flex flex-col gap-1">
            <label for="confirmPassword" class="text-sm">Confirm password</label>
            <input type="password" name="confirmPassword" id="confirmPassword" placeholder="Confirm your password" value="<%= confirmPassword %>" required class="bg-transparent border-solid border-[1px] border-gray-700 p-3 text-start h-12 w-full rounded-lg outline-none">
            <% if (errors) { %>
                <% errors.forEach(function(error) { %>
                    <% if (error.path === 'confirmPassword') { %>
                        <p class="text-red-600 text-sm"><%= error.msg %></p>
                    <% } %>
                <% }) %>
            <% } %>
        </div>
        <button type="submit" class="w-full bg-red-600 rounded-lg text-black p-3 mt-3 hover:brightness-125 hover:text-white font-medium tracking-wider">Submit</button>
    </form>
    <a href="/log-in" class="underline w-full text-center mt-3 tracking-wider">Already have an account? <strong>Login</strong></a>
</div>